{% extends 'base.html.twig' %}

{% block title %}Loads{% endblock %}

{% block body %}
    <h1>Loads</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ load.id }}</td>
            </tr>
            <tr>
                <th>Fuel_surcharge</th>
                <td>{{ load.fuelSurcharge }}</td>
            </tr>
            <tr>
                <th>Well_name</th>
                <td>{{ load.wellName }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ load.code }}</td>
            </tr>
            <tr>
                <th>Driver_name</th>
                <td>{{ load.driverName }}</td>
            </tr>
            <tr>
                <th>Arrived_at_loader</th>
                <td>{{ load.arrivedAtLoader ? load.arrivedAtLoader|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Loaded_distance</th>
                <td>{{ load.loadedDistance }}</td>
            </tr>
            <tr>
                <th>Line_haul</th>
                <td>{{ load.lineHaul }}</td>
            </tr>
            <tr>
                <th>Order_status</th>
                <td>{{ load.orderStatus }}</td>
            </tr>
            <tr>
                <th>Billing_status</th>
                <td>{{ load.billingStatus }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_loads_index') }}">back to list</a>

    <a href="{{ path('app_loads_edit', {'id': load.id}) }}">edit</a>

    {{ include('loads/_delete_form.html.twig') }}
{% endblock %}
