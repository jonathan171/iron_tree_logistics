
{% extends 'base.html.twig' %}

{% block title %}
	{{ "loads.index.title"|trans }}
{% endblock %}


{% block body %}

	<div class="row">
		<div class="col-12">
			<div class="card">

				<div class="card-body">
					<div class="d-flex flex-wrap gap-2">
						{% if documents %}
							<a class="btn btn-warning waves-effect waves-light" href="{{ path('app_user_document_edit',{id:documents.id}) }}">
								<i class="fas fa-file-excel"></i>
								{{"driver.edit.title"|trans}}</a>
						{% else %}
							<a class="btn btn-warning waves-effect waves-light" href="{{ path('app_user_document_new') }}">
								<i class="fas fa-file-excel"></i>
								{{"driver.new.title"|trans}}</a>
						{% endif %}


					</div>


				</div>
			</div>
		</div>
		<!-- end col -->
	</div>

{% endblock %}
